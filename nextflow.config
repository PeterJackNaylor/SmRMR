profiles {
    dclasso {
        executor {
            queueSize = 500
            submitRateLimit = '10 sec'
        }
        env {
            PYTHONPATH = "$PWD:$baseDir/templates:\$PYTHONPATH"
        }
        process.conda = "$PWD/env/"
        process.clusterOptions = { task.attempt <= 1 ? '-jc pcc-normal' : '-jc pcc-large' }
        errorStrategy = 'retry'
        maxRetries = 2
    }
}
